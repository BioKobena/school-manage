// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Etudiant {
  id                Int      @id @default(autoincrement())
  nom               String
  prenoms           String
  sexe              String
  email             String   @unique
  filiere           String
  dateNaissPersonne String
  matricule         String   @unique
  motDePasse        String   @unique
  parent            Parent?  @relation(fields: [parentId], references: [id])
  parentId          Int?
  lieuNaissance     String
  typeEtudiant      String
  serieBAC          String
  lieuResidence     String
  contact           String
  dateInscription   DateTime @default(now())
  namePere          String
  contactPere       String
  nameMere          String
  contactMere       String
}

model Parent {
  id         Int        @id @default(autoincrement())
  matricule  String     @unique
  motDePasse String     @unique
  etudiants  Etudiant[]
}
model Educateur {
  id         Int    @id @default(autoincrement())
  nom        String
  prenoms    String
  email      String @unique
  motDePasse String
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime @default(now())
}
